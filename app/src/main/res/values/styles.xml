<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:noHistory">true</item>
    </style>

    <style name="DefaultDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DefaultDialog.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="DefaultDialog.Fullscreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DefaultDialog.Fullscreen.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="DefaultTextField">
        <item name="backgroundTint">@color/grey_storm</item>
        <item name="colorControlNormal">@color/black_russian</item>
        <item name="colorControlActivated">@color/black_russian</item>
        <item name="android:textColorHint">@color/grey_storm</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>
    <style name="PrimaryButtonTransparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:textColor">@color/blue_dodger</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>
    <style name="PrimaryButtonWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_primary_hollow</item>
        <item name="android:textColor">@color/blue_dodger</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    <style name="CalendarPicker">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="BoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MediumText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MediumText.TextLarge">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="MediumText.HeadingLarge">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="MediumText.HeadingMedium">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>


    <style name="RegularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RegularText.HeadingSmall">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="RegularText.ButtonText">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="RegularText.BodyDefault">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="RegularText.Form">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="RegularText.Label">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="RegularText.BodySmall">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="RegularText.LabelSmall">
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="RegularText.NavigationBar">
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MediumText.TabTitle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
